<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/darkly/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
<div class="container">
    {% for  message in  app.session.flashBag.get('info') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}
    {% for  message in  app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for  message in  app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Liste des Todos</h1>

    <ol class="list-group">
        {% for name, description in app.session.get('todos') %}
           <li class="list-group-item">
                {{ name }} : {{ description }}
                <a style="float:right;margin-left:10px" href={{ path("modifyTodo",{"name":name,"content":2},false) }}>Modify</a>
                <a style="float:right" href={{ path("deleteTodo",{"name":name},false) }}>Delete</a>
            </li>
        {% endfor %}
    </ol>
    <form class="list-group" action="add": style="margin-top:10px;display:flex">
        <input class="list-group-item" type="text" name="name" placeholder="Name">
        <input class="list-group-item" type="text" name="content" placeholder="Content">
        <button style="background-color:#00bc8c;width:fit-content;border:0px;color:white;margin:auto;padding:20px;margin-top:20px;" type="submit">Add</button>
    </form>
</div>
</body>
</html>